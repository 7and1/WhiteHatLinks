# Payload CMS Secret (required)
# Generate with: openssl rand -hex 32
PAYLOAD_SECRET="set-a-strong-secret-min-32-chars"

# Server URL (used for admin panel)
PAYLOAD_PUBLIC_SERVER_URL="http://localhost:3000"

# Email Service (Resend API key)
# Get your API key from: https://resend.com/api-keys
# Production: Set using `wrangler secret put RESEND_API_KEY`
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"

# Revalidate API Secret (for ISR cache invalidation)
# Generate with: openssl rand -hex 32
# Production: Set using `wrangler secret put REVALIDATE_SECRET`
REVALIDATE_SECRET="your-strong-random-secret-min-32-chars"

# Inventory Data Source (optional)
# Path to JSON file containing inventory data
# Defaults to: /Volumes/SSD/dev/links/dobacklinks/scraper/active-sites-incremental.json
# INVENTORY_JSON_PATH="/path/to/your/inventory.json"

# Optional: Cloudflare Environment (for multi-env deployments)
# CLOUDFLARE_ENV="production"

# Cloudflare Web Analytics (optional)
# Get your token from: Cloudflare Dashboard > Analytics > Web Analytics
# Only loads in production environment
# NEXT_PUBLIC_CF_WEB_ANALYTICS_TOKEN="your-analytics-token"

# Site URL (for SEO canonical URLs and sitemaps)
# Production: Set to your actual domain
NEXT_PUBLIC_SITE_URL="https://whitehatlink.org"

# Sentry Error Tracking (optional)
# Get your DSN from: https://sentry.io/settings/projects/
# Format: https://[key]@[host]/[project-id]
# NEXT_PUBLIC_SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"

# Application Version (for error tracking and releases)
# NEXT_PUBLIC_APP_VERSION="1.0.0"
